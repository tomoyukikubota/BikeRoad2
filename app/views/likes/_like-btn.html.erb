<% if post.liked_by?(current_user) %>
  <p>
    <%= link_to post_likes_path(post), method: :delete, class: "fas fa-heart heart-red my-3", remote: true do %>
      <%= post.likes.count %>
    <% end %>
  </p>
<% else %>
  <p>
    <%= link_to post_likes_path(post), method: :post, class: "fas fa-heart my-3", remote: true do %>
      <%= post.likes.count %>
    <% end %>
  </p>
<% end %>