<div class="container">
  <div class="row">
    <div class="col-6 mx-auto mt-5">
      <%= form_with model: @user, local:true do |f| %>
      
        <%= f.label :プロフィール画像 %><br>
        <%= f.attachment_field :profile_image %><br>
        <br>
        
        <%= f.label :名前 %><br>
        <%= f.text_field :name %><br>
        <br>
        
        <%= f.label :プロフィール %><br>
        <%= f.text_area :introduction %><br>
        <br>
        
        <%= f.submit '更新', class:"btn btn-outline-dark" %>
        
      <% end %>
    </div>
  </div>
</div>